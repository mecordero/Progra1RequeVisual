

@{
}
<center>
    <h2></h2>
</center>
<div class="container">
    <div class="row">
        <div class ="col-xs-3"></div>
        <div class="col-xs-3">
            <h3>IniciarSesión</h3>
            <br>
            <form id="frmLogin" method="post" action="/Login/IngresarSistema">
                <input type="text" name="logusuario" id="ingresoUser" placeholder="Usuario">
                <br><br>
                <input type="text" name="logcontraseña" id="ingresoPass" placeholder="Contraseña">
                <br><br>
                <input type="submit" id="btnEntrar" value="Entrar">
                <br><br>
                <p class="alert-danger">@Html.ValidationMessage("errorIngreso")</p>
            </form>
        </div>
        <div class="col-xs-6">
            <h3>Crear una nueva cuenta</h3>
            <br />
            <form method="post" action="/Login/CrearCuenta" >
                <input type="text" name="regNombre" placeholder="Nombre" size="10">
                <input type="text" name="regApellidos" placeholder="Apellidos" size="10">
                <br /><br />
                <input type="text" name="regCorreo" placeholder="Correo Electrónico" size="25">                
                <br /><br />
                <input type="text" name="regUsuario" placeholder="Usuario" size="25">                
                <br><br>
                <input type="text" name="regContraseña" placeholder="Contraseña" size="25">                
                <br><br>
                <input type="submit" value="Crear Cuenta">
                <p class="text-success">@Html.ValidationMessage("cuentaCreada")</p>
                <p name="msg" class="alert-danger">@Html.ValidationMessage("errorRegistro")</p>
            </form>
        </div>
    </div>
</div>

