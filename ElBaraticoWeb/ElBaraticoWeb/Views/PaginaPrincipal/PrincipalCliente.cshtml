@model ElBaraticoWeb.Models.PaginaPrincipalClienteModel
@{   
}

<center><h2></h2></center>
<br>
<div class="container">
    <div class="row">
        <div class="col-xs-4">
            <h3>Ofertas</h3>
        </div>
        <div class="col-xs-4">
            <h3>Buscar un producto</h3>
            <form method="post" action="/PaginaPricipal/BuscarProducto">
                <input type="text" name="busquedaProducto" placeholder="Nombre del producto">
                <input type="submit" value="Buscar">
            </form>
            @if (Model.listaProductos.Count == 0)
            {
                <p>No existen productos disponibles</p>
            }
            else 
            {                 
                <ul>
                    @foreach (var producto in Model.listaProductos)
                    {
                        <li>@producto.nombre</li>
                    }
                </ul>
            }

        </div>
        <div class="col-xs-4">            
            <h3>Categorías de productos</h3>
        </div>
    </div>
</div>
